<div class="day-container"   >
  <div class="card rounded-md d-flex flex-row align-items-center ps-2" data-controller="sortable">
    <h2 class="text-nowrap">Day <%= day.number %></h2>
    <div class="category-container">
      <% day.contents.each do |content| %>
        <%= render 'category_icon', category: content.category.title %>
      <% end %>
    </div>
  </div>
</div>
