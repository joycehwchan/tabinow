<tr>
  <td>
    <%= link_to itinerary.title, itinerary_path(itinerary) %>
  </td>
  <!-- status
  <td>
    <div class="status-pill <%=itinerary.status %>">
      <span><%=itinerary.status %></span>
    </div>
  </td>
  -->
  <!-- client name
  <td>
    <%= itinerary.client ? itinerary.client.name : "-" %>
  </td>
  -->
  <td>
    <div class="special-request text-truncate d-block">
      <%= itinerary.special_request ? itinerary.special_request : "-" %>
    </div>
  </td>
  <td>
    <div class="d-flex align-items-center">
      <%= link_to '#', class:"btn btn-sm btn-outline-secondary btn-tabinow" do %>
        <i class="fa-solid fa-download"></i> Download
      <% end %>
      <%= link_to itinerary_path(itinerary), class:"btn btn-sm btn-outline-dark btn-tabinow ms-2", data: { turbo_method: :delete  , turbo_confirm: "Deleting #{itinerary.title} itinerary ?" } do %>
        <i class="fa-solid fa-xmark"></i> Delete
      <% end %>
    </div>
  </td>
  <td>
    <%= time_ago_in_words(itinerary.updated_at, include_seconds: true) %> ago
  </td>
</tr>
