 <%= simple_form_for itinerary , data: { turbo: :false } do |f| %>
  <div class="row">
    <div class="mb-2 col-12">
      <%= label_tag 'Email', nil, class:"form-label" %>
      <%= text_field_tag :email, nil, class:"form-control" %>
    </div>
    <div class="mb-2 col-6">
      <%= label_tag 'Budget (min)', nil, class:"form-label" %>
      <%= number_field_tag :min_price, nil, class:"form-control", step:"1000", min:"0", required: true %>
    </div>
    <div class="mb-2 col-6">
      <%= label_tag 'Budget (max)', nil, class:"form-label" %>
      <%= number_field_tag :max_price, nil, class:"form-control", step:"1000", min:"0", required: true %>
    </div>
    <div class="mb-2 col-6">
      <%= label_tag 'Start date', nil, class:"form-label" %>
      <input type="date" id="start_date" name="start_date" class="form-control">
    </div>
    <div class="mb-2 col-6">
      <%= label_tag 'End date', nil, class:"form-label" %>
      <input type="date" id="end_date" name="end_date" class="form-control">
    </div>
    <div class="mb-2 col-12">
      <%= f.input :location %>
    </div>
    <div class="mb-2 col-12">
      <%= label_tag 'Special request', nil, class:"form-label" %>
      <%= text_area_tag :special_request, nil, class:"form-control" %>
    </div>
    <div class="col-12">
      <%= f.submit "Submit request", class: 'btn btn-primary btn-tabinow mt-2 w-100' %>
    </div>
  </div>
<% end %>
