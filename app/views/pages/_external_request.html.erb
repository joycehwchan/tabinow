 <%= simple_form_for itinerary , data: { turbo: :false } do |f| %>
  <div class="row external-request-form">
    <div class="mb-1 col-12">
      <%= label_tag 'Full name', nil, class:"form-label" %>
      <%= text_field_tag :name, nil, class:"form-control" %>
    </div>
    <div class="mb-1 col-12">
      <%= label_tag 'Email', nil, class:"form-label" %>
      <%= text_field_tag :email, nil, class:"form-control" %>
    </div>
    <div class="mb-1 col-6">
      <%= f.label :min_budget, 'Min Budget (USD)', class:"form-label" %>
      <%= f.input :min_budget, class:"form-control", step:"1000", min:"0", required: true, label: false %>
    </div>
    <div class="mb-1 col-6">
      <%= f.label :max_budget, 'Max Budget (USD)', class:"form-label" %>
      <%= f.input :max_budget, class:"form-control", step:"1000", min:"0", required: true, label: false %>
    </div>
    <div class="mb-1 col-12">
      <%= f.input :start_date, class:"form-control" %>
    </div>
    <div class="mb-1 col-12">
      <%= f.input :end_date ,class:"form-control" %>
    </div>
    <div class="mb-1 col-12">
      <%= f.input :location %>
    </div>
    <div class="mb-1 col-12">
      <%= f.input :special_request,  class:"form-control" %>
    </div>
    <div class="col-12">
      <%= f.submit "Submit request", class: 'btn btn-primary btn-tabinow mt-2 w-100' %>
    </div>
  </div>
<% end %>
